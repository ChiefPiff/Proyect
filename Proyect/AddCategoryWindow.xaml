<Window x:Class="Proyect.AddCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyect"
        mc:Ignorable="d"
        Title="Add Category" Height="150" Width="250">
    <Grid>
        <Label Content="Название категории:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-4,2,0,0"/>
        <TextBox x:Name="categoryNameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,10,0,0" Width="130"/>

        <Button Content="Сохранить" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,40,0,0" Click="SaveCategory_Click"/>
    </Grid>
</Window>
